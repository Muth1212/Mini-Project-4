<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles.css" />
  <title>Blog Home</title>
</head>
<body>
  <div class="container">
    <h1>Blog</h1>
    <a href="/create" class="button">Create New Post</a>
    <ul>
      <% posts.forEach((post, index) => { %>
        <li class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <p>By <%= post.author %> at <%= post.time %></p>
          <a href="/edit/<%= index %>" class="button">Edit</a>
          <a href="/delete/<%= index %>" class="button delete-button">Delete</a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
